@{
    //setting up viewbag
    ViewBag.Title = "Assignment_5";
}

<!--
    This page is setting up the basic view
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /*
        while bootstrap helped with a lot, I really wanted by table header and body separated
        and bootstrap didnt have a class for that
        */
        .sep {
            border-bottom-style: solid;
            border-bottom-color: slategrey;
            border-bottom-width: thick;
        }
    </style>
</head>
<body class="bg-secondary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@ViewBag.PageName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <!--
                        Since this is only going to be one page, for
                        now I have removed most of the li items on the
                        nav bar. later I will add more in, thus, I have left the bare
                        bones tags for future use
                    -->
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="row ml-5 pl-5">
        <div class="col-1">
            <vc:navigation-menu />
        </div>

        <div class="col ml-5">
            @RenderBody()
        </div>

        <div class="col ml-5">
            <a href="https://www.amazon.com/b?node=21597259011&ref=af_gw_dtop_thedrp_fans_more&pf_rd_r=RGVX09RD3K1MFRM3Q68F&pf_rd_p=96348468-55f1-4f2a-b9ac-d9f8d1289523&pd_rd_r=dcf4d672-a300-45bb-b485-a784cb47614e&pd_rd_w=oAws7&pd_rd_wg=OfSvf&ref_=pd_gw_unk"
               target="_blank">
                <img src="~/img/avert2.png" alt="advert" style="height:375px; width:250px"/>
            </a>
        </div>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2021 - assignment_5
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
