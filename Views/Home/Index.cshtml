@{
    ViewBag.PageName = "Book Selection";
}

@model ProjectListViewModel

<!--
    This page is going to display the records in our book table in our database
-->
<div class="text-center">
    <table>
        <thead class="table-success sep table-bordered">
            <tr>
                <th>Book ID</th>
                <th>Title</th>
                <th>Page Number</th>
                <th>ISBN</th>
                <th>Category</th>
                <th>Classification</th>
                <th>Price</th>
                <th>Author's Firstname</th>
                <th>Author's Middlename</th>
                <th>Author's Lastname</th>
                <th>Publisher</th>
            </tr>
        </thead>

        <tbody class="table-info sep table table-hover">
            @foreach (var x in Model.Libros)
            {
                <!--
                    Here I have put the attributes that I want to show. Note: I have added page number
                -->
                <tr>
                    <td>@x.BookID</td>
                    <td>@x.BTitle</td>
                    <td>@x.BPageNumber</td>
                    <td>@x.ISBN</td>
                    <td>@x.BCategory</td>
                    <td>@x.BClassification</td>
                    <td>@x.BPrice</td>
                    <td>@x.BAuthorFirst</td>
                    <td>@x.BAuthorMid</td>
                    <td>@x.BAuthorLast</td>
                    <td>@x.BPublisher</td>
                </tr>
            }
        </tbody>
    </table>

    <!--
        Here is displayed the page numbers that are automatically generated based on the database
    -->
        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
             class="table-success w-25 mx-auto shadow p-3 mb-5 bg-light rounded">
        </div>
</div>
