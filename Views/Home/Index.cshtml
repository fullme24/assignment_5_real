@{
    ViewBag.PageName = "Book Selection";
}

@model ProjectListViewModel

<!--
    This page is going to display the records in our book table in our database
-->
<div class="text-center">
    <table>
        <thead class="table-success sep table-bordered">
            <tr>
                <th>Book ID</th>
                <th>Title</th>
                <th>Page Number</th>
                <th>ISBN</th>
                <th>Category</th>
                <th>Classification</th>
                <th>Price</th>
                <th>Author's Firstname</th>
                <th>Author's Middlename</th>
                <th>Author's Lastname</th>
                <th>Publisher</th>
            </tr>
        </thead>

        <tbody class="table-info sep table table-hover">
            @foreach (var x in Model.Libros)
            {
                <!--
                    Here I will put the attributes that I want to show. Note: I have added page number
                -->
                <partial name="LibroSummary" model="x" />
            }
        </tbody>
    </table>

    <!--
        Here is displayed the page numbers that are automatically generated based on the database
    -->

    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-light" page-class-selected="btn-primary"
         page-url-category=" @Model.CurrentCategory"
         class="">
    </div>
</div>
